<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main_xGextendsGT"
    style="@android:style/Theme.NoTitleBar.Fullscreen"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.xgtechnology.xgextendsgt.MainActivity_xGextendsGT"
    android:backgroundTint="@android:color/darker_gray"
    tools:background="@android:color/darker_gray"
    android:background="@android:color/holo_orange_dark">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/rlRunning"
        android:background="@android:color/holo_green_light"
        android:layout_alignParentBottom="true"
        android:backgroundTint="@android:color/darker_gray"
        tools:background="@android:color/darker_gray"
        android:visibility="visible"
        >


    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="xG GT " />


    <TextView
        android:id="@+id/tvStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:layout_toRightOf="@id/tvTitle"
        android:textColor="@android:color/holo_blue_dark"
        android:background="@android:color/white"
        android:text="Status" />

        <TextView
            android:id="@+id/tvLblLatitude"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp"
            android:layout_below="@+id/tvStatus"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textColor="@android:color/white"
            android:background="@android:color/holo_blue_dark"
            android:text="Lat:" />


    <TextView
        android:id="@+id/tvLatitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/tvLblLatitude"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"

        android:layout_below="@+id/tvStatus"
        android:textColor="@android:color/black"
        android:background="@android:color/white"
        android:text="Latitude: " />


        <TextView
            android:id="@+id/tvLblLongitude"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tvLatitude"
               android:layout_marginStart="20dp"
            android:layout_below="@+id/tvStatus"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textColor="@android:color/white"
            android:background="@android:color/holo_blue_dark"
            android:text="Lng:" />


    <TextView
        android:id="@+id/tvLongitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/tvLblLongitude"
        android:layout_below="@+id/tvStatus"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"

        android:textColor="@android:color/black"
        android:background="@android:color/white"
        android:text="Longitude: " />

        <TextView
            android:id="@+id/tvLblHeading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp"
            android:layout_below="@+id/tvLatitude"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textColor="@android:color/white"
            android:background="@android:color/holo_blue_dark"
            android:text="Heading:" />



    <TextView
        android:id="@+id/tvHeading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/tvLblHeading"
        android:layout_below="@+id/tvLatitude"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"

        android:textColor="@android:color/black"
        android:background="@android:color/white"
        android:text="Heading: " />

        <Button
            android:id="@+id/btnStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="2dp"
            android:layout_below="@id/tvHeading"
            android:layout_marginTop="5dp"
            android:text="Start"
            android:layout_alignParentLeft="true"
            />


        <TextView
            android:id="@+id/tvLblUnitName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/btnStart"
            android:layout_alignTop="@id/btnStart"
            android:layout_marginLeft="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textColor="@android:color/white"
            android:background="@android:color/holo_blue_dark"
            android:text="Unit Name:" />


        <TextView
            android:id="@+id/tvUnitName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/tvLblUnitName"
            android:layout_alignBottom="@id/tvLblUnitName"

            android:paddingLeft="5dp"
            android:paddingRight="5dp"

            android:textColor="@android:color/black"
            android:background="@android:color/white"
            android:text="Unit Name: "
            />

        <TextView
            android:id="@+id/tvLblCallSign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvUnitName"
            android:layout_alignRight="@id/tvLblUnitName"
            android:layout_alignLeft="@id/tvLblUnitName"
            android:layout_marginLeft="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textColor="@android:color/white"
            android:background="@android:color/holo_blue_dark"
            android:text="CallSign:" />


        <TextView
            android:id="@+id/tvCallSign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/tvLblCallSign"
            android:layout_alignBottom="@id/tvLblCallSign"

            android:paddingLeft="5dp"
            android:paddingRight="5dp"

            android:textColor="@android:color/black"
            android:background="@android:color/white"
            android:text="Call Sign: "
            />

        <TextView
            android:id="@+id/tvLblGID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvCallSign"
            android:layout_alignRight="@id/tvLblCallSign"
            android:layout_alignLeft="@id/tvLblCallSign"
            android:layout_marginStart="10dp"
            android:layout_marginTop="2dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textColor="@android:color/white"
            android:background="@android:color/holo_blue_dark"
            android:text="GID:" />



        <TextView
            android:id="@+id/tvGID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tvLblGID"
            android:layout_alignBottom="@id/tvLblGID"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_marginTop="2dp"

            android:textColor="@android:color/black"
            android:background="@android:color/white"
            android:text=" "
            />

        <TextView
            android:id="@+id/tvLblIP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/tvLblCallSign"
            android:layout_marginTop="2dp"
            android:layout_below="@+id/tvGID"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textColor="@android:color/white"
            android:background="@android:color/holo_blue_dark"
            android:text="IP:" />



        <TextView
            android:id="@+id/tvIP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tvLblIP"
            android:layout_alignBottom="@id/tvLblIP"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_marginTop="2dp"

            android:textColor="@android:color/black"
            android:background="@android:color/white"
            android:text=" "
            />


        <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/tvIP"
            android:layout_marginTop="5dp"

    android:id="@+id/rlMessages"
    android:background="@android:color/holo_green_light"
    android:layout_alignParentBottom="true"

    >

    <ListView
        android:id="@+id/lvMessages"
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="5dp"
        android:layout_height="wrap_content"
        android:alwaysDrawnWithCache="true"
        android:scrollingCache="true"

        android:textColor="@android:color/black"
        android:divider="@android:color/white"
        android:dividerHeight="3dp"
        android:background="@android:color/holo_red_light"
        android:scrollbars="horizontal|vertical"
        android:scrollbarSize="60dp"
        android:scrollbarStyle="outsideInset"
        android:fastScrollEnabled="true"
        android:fadeScrollbars="false"
   />

    </RelativeLayout>
</RelativeLayout>

</RelativeLayout>
